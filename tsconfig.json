{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
